# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Django templates
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

